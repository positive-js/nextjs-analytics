{
    "typedocOptions": {
        "entryPoints": [
            "src/index.ts"
        ],
        "out": "docs"
    },
    "compilerOptions": {
        "target": "es6",
        "lib": [
            "dom",
            "esnext"
        ],
        "declaration": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strictPropertyInitialization": false,
        "jsx": "react",
        "baseUrl": ".",
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src"
    ]
}
